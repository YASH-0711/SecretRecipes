<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.1.7/css/fixedHeader.bootstrap.min.css">
    <link rel="stylesheet" href=" https://cdn.datatables.net/responsive/2.2.6/css/responsive.bootstrap.min.css">
    <style>

    body{
            background: linear-gradient(115deg, #59e7bd, #1feef5);
    }
        .container{
  max-width: 700px;
  width: 100%;
  background-color: #fff;
  padding: 25px 30px;
  border-radius: 5px;
  box-shadow: 0 5px 10px rgba(0,0,0,0.15);
  margin-top: 5rem;
}

.img{
    height:6rem;
    margin-bottom: 1rem;
    margin-left: auto;
    margin-right: auto;
}
.btn{
        border-radius: 9999px;
        color: black;
        font-weight: 700;
        padding-left: 1rem;
        padding-right: 1rem;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        /* border-radius: 0.25rem; */
        outline: 2px solid transparent;
        outline-offset: 2px;
        background: linear-gradient(115deg, #59e7bd, #1feef5);
}
.con-3{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
</style>
</head>
<body>
    <div class="container" >
      
      <a href="/addMenu"><button class="btn">Back</button></a>
      <a href="/"><button class="btn">Home</button></a>
      <a href="/Menu"><button class="btn">Menu</button></a>
    <div class=container-1 style="margin-top: 30px; margin-bottom: 40px; margin-left: 50px; margin-right: 50px;"  >
        <form action="/userData" enctype="multipart/form-data">  
            <table id="example" class="table table-striped table-bordered nowrap" style="width:100%" >
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Action</th>
        
                       
                    </tr>
                </thead>
                <% records.forEach(function(row,index){ %>
                <tr>
                    <td><%= row.name %></td>
                    <td><%= row.size %></td>
                    <td><%= row.price %></td>
                    <td><img class="img" src="data:image/<%=row.img.contentType%>;base64,
                        <%=row.img.data.toString('base64')%>"></td>
                    <td><a class="btn btn-primary btn-xs" href="/edit/<%= row._id %>" ><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/delete/<%= row._id %>" ><i class="fa fa-trash"></i></a></td>
                    
                </tr>
                <% }) %>
            </table>
        </form>
   
</div>
</div>
     <script src="https://code.jquery.com/jquery-3.5.1.js"></script> 
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script> 
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.1.7/js/dataTables.fixedHeader.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.6/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.6/js/responsive.bootstrap.min.js  "></script>

    <script>
        $(document).ready(function() {
            var table = $('#example').DataTable( {
                responsive: true
            } );
        
            new $.fn.dataTable.FixedHeader( table );
        } );
       
    </script>

</body>
</html>